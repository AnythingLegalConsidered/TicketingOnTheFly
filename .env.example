# Ticketing Auto - Environment Variables Template
# Copy this file to .env and fill in the values

# General Settings
COMPOSE_PROJECT_NAME=ticketing_auto
TZ=Europe/Paris

# Traefik Configuration
TRAEFIK_DOMAIN=localhost
TRAEFIK_EMAIL=admin@localhost
TRAEFIK_ACME_EMAIL=admin@localhost

# LDAP Configuration
LDAP_ORGANIZATION=Ticketing Auto
LDAP_DOMAIN=local
LDAP_BASE_DN=dc=local
LDAP_ADMIN_PASSWORD=admin_password_change_me
LDAP_CONFIG_PASSWORD=config_password_change_me
LDAP_READONLY_USER_PASSWORD=readonly_password_change_me

# Zammad Configuration
ZAMMAD_DB_PASSWORD=zammad_password_change_me
ZAMMAD_SECRET_KEY_BASE=secret_key_base_change_me
ZAMMAD_LDAP_ENABLED=true
ZAMMAD_LDAP_HOST=openldap
ZAMMAD_LDAP_PORT=389
ZAMMAD_LDAP_SSL=false
ZAMMAD_LDAP_BIND_DN=cn=admin,dc=local
ZAMMAD_LDAP_BIND_PASSWORD=admin_password_change_me
ZAMMAD_LDAP_BASE_DN=dc=local

# OCS Inventory Configuration
OCS_DB_PASSWORD=ocs_password_change_me
OCS_ADMIN_PASSWORD=ocs_admin_password_change_me

# Wiki.js Configuration
WIKIJS_DB_PASSWORD=wiki_password_change_me
WIKIJS_SECRET=wiki_secret_change_me

# PostgreSQL Configuration
POSTGRES_PASSWORD=postgres_password_change_me

# MariaDB Configuration
MARIADB_ROOT_PASSWORD=mariadb_root_password_change_me
MARIADB_PASSWORD=mariadb_password_change_me

# Monitoring Configuration
PROMETHEUS_RETENTION=15d
GRAFANA_ADMIN_PASSWORD=grafana_admin_password_change_me
LOKI_RETENTION=7d

# Email Configuration (Production - Postfix)
SMTP_RELAY_HOST=smtp.example.com
SMTP_RELAY_PORT=587
SMTP_RELAY_USER=
SMTP_RELAY_PASS=
MAIL_DOMAIN=example.com

# Backup Configuration
BACKUP_ENCRYPTION_KEY=backup_encryption_key_change_me
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_S3_REGION=us-east-1

# Development Settings (MailHog)
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025
